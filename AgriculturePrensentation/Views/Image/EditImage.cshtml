
@model EntityLayer.Concrete.Image 
@{
    ViewData["Title"] = "EditImage";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Görsel Güncelleme Sayfası</h4>

                  <form class="forms-sample" method = "post">
                    <div class="form-group">
                    @Html.HiddenFor(x => x.ImageID)
                      <label for="exampleInputName1">Başlık</label>
                      <span asp-validation-for = "Title" class = "text-danger"></span>
                      <input type="text" class="form-control" id="exampleInputName1" placeholder="başlık giriniz" asp-for ="Title">
                    </div>
                   
                    <div class="form-group">
                      <label for="exampleInputEmail3">Görsel Yolu</label>
                      <span asp-validation-for = "ImageUrl" class = "text-danger"></span>
                      <input type="text" class="form-control" id="exampleInputEmail3" placeholder="görsel yolu giriniz" asp-for ="ImageUrl">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">Açıklama</label>
                      <input type="text" class="form-control" id="exampleInputEmail3" placeholder="açıklama giriniz" asp-for ="Description">
                    </div>
                    
                    <button type="submit" class="btn btn-outline-info">Kaydet</button>
                  </form>
                </div>
              </div>
            </div>





